<%= render 'shared/nav' %>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12 heading-titles">
      <h1 class="text-center page-title"><%= current_user.first_name%>' Overall Ratings</h1>
  	</div>
		
		
		<% User::EVALUATION_FIELDS.each_with_index do |eval_field,index| %>
			<% if index == 0 %>
				<div class="col-md-2 col-md-offset-1"> 
			<% else %>
				<div class="col-md-2 "> 
			<% end %>
				<div class="rating-panel">
					<div class="rating-heading">
			    		<h3 class="rating-title text-center"><%= eval_field.humanize %></h3>
			  		</div>
					<div class="rating-icon">
						<h1 class="rating-value">
							<%= current_user.get_evaluation_field_average(eval_field) %>
						</h1>
			  		</div>
			  <div class="rating-body">
			    <p>Your ability of being depended on; reliable and trustworthy to your peers.</p>
			  </div>
			  <div class="panel-footer">
			  	<p class="rating-fine-print">*Rating is out of 5 based on a cumulative average.</p>
			  </div> <!-- close panel footer -->
			</div> <!-- close panel -->
		</div> <!-- closes col-md-2 -->
		<% end %>
	
	<div class="col-md-10 col-md-offset-1"> 
		<h1>Philosophy 101</h1> 
		
			<% @all_comments = current_user.get_all_comments %>
			<% if @all_comments != nil && @all_comments.count > 0 %>
				<% @all_comments.each do |comment| %>
					<p class="comment-box"> 
					<%= comment %>
					<p> 
				<% end %>
			<% elsif %>
				no comments :(
			<% end %>
			
	</div>

	</div> <!-- closes col-md-2 col-md-offset-1 -->
</div> <!-- container-fluid -->

<%= render 'shared/internal_footer' %>