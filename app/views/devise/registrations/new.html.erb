<body class="sign-up bg">
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 authentication-form-bg">

      <h2 class="auth-headings text-center">Sign up</h2>
      
        <%= bootstrap_form_for(resource, inline_errors: true, as: resource_name, url: registration_path(resource_name))   do |f| %>
          <div class="col-md-6 first-name-field">
           <%= f.text_field :first_name, required:true, autofocus: true, hide_label:true, inline: true, placeholder: "Enter your first name" %>
         </div>
         <div class="col-md-6 last-name-field">
           <%= f.text_field :last_name, required:true, hide_label:true, inline: true, placeholder: "Enter your last name" %>
         </div>
           
         <div>
          <%= f.email_field :email, required:true, hide_label: :true, placeholder: "Enter your email address" %> 
        </div>
    
            <%= f.password_field :password, required:true, autocomplete: "off", hide_label: :true, placeholder: "Enter your password" %>
    
            <%= f.password_field :password_confirmation, required:true, autocomplete: "off", hide_label: :true, placeholder: "Enter your password for confirmation" %>

          <%= f.submit "Sign up", class: "btn btn-info btn-block btn-lg" %>
        </div>
        <% end %>
        <div class="col-md-6 col-md-offset-3">
        <p class="devise-links text-right">Already created an account? <%= link_to 'Login', login_path %></p>
        </div>
      </div>
  </div>
</body>
