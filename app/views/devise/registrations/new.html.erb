<body class="sign-up bg">
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 authentication-form-bg">
      <%= render 'layouts/messages' %>

      <h2 class="auth-headings text-center">Sign up</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="col-md-6 first-name-field">
           <%= f.text_field :first_name,  autofocus: true, hide_label:true, inline: true, placeholder: "Enter your first name" %>
         </div>
         <div class="col-md-6 last-name-field">
           <%= f.text_field :last_name, hide_label:true, inline: true, placeholder: "Enter your last name" %> 
         </div>
           
         <div>
          <%= f.email_field :email, hide_label: :true, placeholder: "Enter your email address" %> 
        </div>
 
            <%= f.password_field :password, autocomplete: "off", hide_label: :true, placeholder: "Enter your password" %>
    
            <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: :true, placeholder: "Enter your password for confirmation" %>

            <%= f.form_group :role, label: { text: "Role" } do %>
            <% User::ROLES.each do |role| %>
              <%= f.radio_button :role, role, label: role.humanize, inline: true %>
            <% end %>
          <% end %>
          <%= f.submit "Sign up", class: "btn btn-info btn-block btn-lg" %>
        </div>
        <% end %>
        <div class="col-md-6 col-md-offset-3">
        <p class="devise-links text-right">Already created an account? <%= link_to 'Login', login_path %></p>
        </div>
      </div>
  </div>
</body>
