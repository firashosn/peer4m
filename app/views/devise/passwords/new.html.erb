<body class="forgot-password bg">
	<div class="container">
  	<div class="row">
    	<div class="col-md-6 col-md-offset-3 authentication-form-bg">

	<h2 class="auth-headings">Forgot your password?</h2>

	<%= bootstrap_form_for resource, url: password_path(resource_name) do |f| %>
	<%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true %>

  <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
	
	<% end %>

		</div>
	</div>
</div>
</body>
