<body class="forgot-password bg">
	<div class="container">
  	<div class="row">
    	<div class="col-md-6 col-md-offset-3 authentication-form-bg">

	<h2 class="auth-headings text-center">Forgot your password?</h2>

	<%= bootstrap_form_for resource, url: password_path(resource_name) do |f| %>
	<div class="authentication-errors"><%= devise_error_messages! %></div>

  <%= f.email_field :email, autofocus: true, hide_label:true, placeholder: "Enter your email address" %>

  <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
	<%= link_to "Take me back please!", login_path, class: "btn btn-custom" %>
	<% end %>

		</div>
	</div>
</div>
</body>
