<%= bootstrap_form_for @course do |f| %>
	
	<% if current_user.role == "instructor" %>
	
	<%= f.text_field :start_date, hide_label: :true, value: @course.start_date.strftime("%d/%m/%Y"), placeholder: "Click to select Start Date", "data-behaviour" => "datepicker" %>

	<!-- value: @course.start_date == nil ? nil: @course.start_date.strftime("%d/%m/%Y") -->
	
	<%= f.text_field :course_name, hide_label: :true, placeholder: "Course Name (Ex. Business)" %>
	
	<%= f.text_field :course_id, hide_label: :true, placeholder: "Course ID (Ex. BUS101)" %>  
   
   <%= f.submit "Submit", class: "btn btn-info" %>

   <% elsif current_user.role == "student" %>

   <%= f.text_field :enrollment_password, hide_label: :true, autocomplete: "off", placeholder: "Enter enrollment password" %> 

   <%= f.submit "Enroll", class: "btn btn-info" %>
	
	<% end %> 
 
<% end %>


