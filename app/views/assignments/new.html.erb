<h1>New Assignment</h1>

<%= form_for :assignment, url: course_assignment_path do |f| %>
  <p>
    <%= f.label :assignment_name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :open_time %><br>
    <%= f.datetime_field :open_time %>
  </p>
  <p>
    <%= f.label :close_time %><br>
    <%= f.datetime_field :close_time %>
  </p>
  <p>
    <%= f.label :instruction%><br>
    <%= f.text_area :instructions %>
  </p>
 <p>
      <%= f.label :teams%><br>
      <%= f.text_area :teams_text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
